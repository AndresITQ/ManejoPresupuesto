@{
    ViewData["Tittle"] = "Tipos de Cuentas";
}
<h1>TIPOS DE CUENTAS</h1>
<h5>
    El tipo de cuentas se refiere a como podemos agrupar cuentas
    Ejmeplos; Prestamos, tarjeta de credito, etc...
</h5>
<a class="btn btn-success" asp-action="Crear">INSERTAR DATOS</a>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nombre</td>
            <td>Usuario</td>
            <td>Accion</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipoCuenta in Model)
        {
            <tr>
                <td>@tipoCuenta.Id</td>
                <td>@tipoCuenta.Nombre</td>
                <td>@tipoCuenta.UsuarioId</td>
                <td>
                    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@tipoCuenta.Id"><i class="bi bi-pencil-fill"></i> </a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@tipoCuenta.Id"><i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
